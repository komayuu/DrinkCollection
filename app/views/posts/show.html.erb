<div class="container mx-auto pt-5">
  <div class="mb-3">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-2xl font-bold mb-5">投稿詳細</h1>
      <article class="bg-white shadow rounded-lg overflow-hidden flex">
        <!-- 画像 -->
        <div class="w-48 h-48 flex-shrink-0">
          <%= image_tag @post.post_image_url, class: "w-full h-full object-cover rounded-md" %>
        </div>
        <!-- タイトル、詳細情報 -->
        <div class="p-4 flex-1">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold mb-2"><%= @post.title %></h3>
            <% if current_user.own?(@post) %>
              <div class="flex justify-end space-x-4">
                <!-- シェアボタン -->
                <% share_url = post_url(@post) %>
                <% share_text = "#{@post.title} - #{@post.body.truncate(50)}" %>
                <a href="https://twitter.com/intent/tweet?url=<%= URI.encode_www_form_component(share_url) %>&text=<%= URI.encode_www_form_component(share_text) %>" 
                  target="_blank" 
                  class="text-gray-500 hover:text-gray-700">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 12 3.269 3.125A59.769 59.769 0 0 1 21.485 12 59.768 59.768 0 0 1 3.27 20.875L5.999 12Zm0 0h7.5" />
                  </svg>
                </a>
                <!-- 編集ボタン -->
                <%= link_to edit_post_path(@post), id: "button-edit-#{@post.id}", class: "text-gray-500 hover:text-gray-700" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
                  </svg>
                <% end %>
                <!-- 削除ボタン -->
                <%= link_to post_path(@post), id: "button-delete-#{@post.id}", data: { turbo_method: :delete, turbo_confirm: "削除しますか？" }, class: "text-gray-500 hover:text-gray-700" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                   <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
          <!-- 本文 -->
          <p class="mt-4 text-gray-700 leading-relaxed"><%= simple_format(@post.body) %></p>
          <!-- ユーザー、日付 -->
          <ul class="flex text-sm text-gray-600 space-x-4 mb-4">
            <li><%= "#{@post.user.name}" %></li>
            <li><%= l @post.created_at, format: :long %></li>
          </ul>
        </div>
      </article>
    </div>
  </div>
</div>
