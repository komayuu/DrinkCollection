<% content_for(:title, "プロフィール編集") %>

<div class="container mx-auto px-4 py-6">
  <div class="max-w-2xl mx-auto bg-white p-6 shadow-md rounded-lg">
    <h1 class="text-2xl font-bold mb-4">プロフィール編集</h1>

    <%= form_with model: @user, url: mypage_path, method: :put, class: "space-y-4" do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div>
        <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :ユーザーネーム, class: "block text-lg font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>
      <%= f.submit "更新", class: "w-full bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded" %>
    <% end %>
    <div class="mt-4 text-center">
      <%= link_to "マイページに戻る", mypage_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
