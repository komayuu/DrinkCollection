<h2 class="text-xl font-bold mb-4">ビールの投稿</h2>

<% @drinks = Drink.where(category: "beer").where(is_admin: true) %>

<% @drinks.each do |drink| %>
  <div class="bg-white shadow-md rounded-lg p-4 mb-4">
    <h3 class="text-lg font-semibold"><%= drink.name %></h3>
    <p class="text-gray-700"><%= drink.description %></p>
    <p class="text-sm text-gray-500">アルコール度数: <%= drink.alcohol %>%</p>
    <% if drink.drink_image.present? %>
      <img src="<%= drink.drink_image.url %>" alt="<%= drink.name %>" class="w-full h-48 object-cover mt-2 rounded-md">
    <% end %>
  </div>
<% end %>
