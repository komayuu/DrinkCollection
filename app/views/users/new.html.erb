<!-- 新規登録レイアウト -->
<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="max-w-md w-full bg-white p-8 shadow-lg rounded-md">
    <h1 class="text-4xl font-bold text-center mb-6">新規登録</h1>
    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <%= render 'shared/error_messages', object: form.object %>
      <div class="flex flex-col">
        <%= form.label :name, "ユーザーネーム", class: "mb-2 text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :email, "メールアドレス", class: "mb-2 text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :password, "パスワード", class: "mb-2 text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :password_confirmation, "パスワード確認", class: "mb-2 text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-gray-500" %>
      </div>
      <%= form.submit "新規登録", class: "btn-center mb-4 bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
    <!-- Google認証 -->
    <div class="mt-4">
      <%= link_to "Google認証", "#", class: "btn-center mb-4 bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
